<!DOCTYPE html>
<html>
  <head>
    <title>BooksReview</title>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
  </head>
  <body>

    <nav class="navbar navbar-default">
      <div class="container">
        <div class="navbar-header">
          <%= link_to "Hurt At Work", root_path, class: "navbar-brand" %>
        </div>
        <ul class="nav navbar-nav">
          <% if user_signed_in? %>
          <li><%= link_to "Log Out", destroy_user_session_path, method: :delete %></li>
        <% else %>
          <li><%= link_to "Log In", new_user_session_path %></li>
          <li><%= link_to "Sign Up", new_user_registration_path %></li>
          <% end %>
        </ul>

        <ul class="nav navbar-nav navbar-right">
          <% if user_signed_in? %>

          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Categories
              <span class="carret"></span>
            </a>
            <ul class="dropdown-menu" role="menu">
              <li><%= link_to "Physicians", physicians_path, class: "link" %></li>
              <li><%= link_to 'Attorneys', attorneys_path, class: "link" %></li>
            </ul>
          </li>
          <% end %>

        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Create Professinal
            <span class="carret"></span>
          </a>
          <ul class="dropdown-menu" role="menu">
            <% if user_signed_in? %>
            <li><%= link_to 'Add Physicians',new_physician_path, class: "link" %></li>
            <li><%= link_to 'Add Attorneys', new_attorney_path, class: "link" %></li>
            <% end %>
          </ul>
        </li>


          <!-- <% if user_signed_in? %>
            <li><%= link_to "Add Physicians", new_physician_path %></li>
            <li><%= link_to "Add Attorneys", new_attorney_path %></li>
          <% end %> -->
        </ul>
      </div>
    </nav>

    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>

    <div class="container">

      <%= yield %>

    </div>
  </body>
</html>
